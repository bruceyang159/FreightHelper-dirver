<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_color"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/layout_title_height"
            layout="@layout/layout_title" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="28%h"
            app:layout_marginTopPercent="0%w"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="20%w"
                app:layout_widthPercent="50%w"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/matiquan_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginBottomPercent="2%h"
                app:layout_marginTopPercent="5%h"
                app:layout_textSizePercent="5%w"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/about_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="2%h"
                app:layout_textSizePercent="5%w"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/text_normal_color" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <!-- 检查更新 -->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/about_update_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/about_heightPercent"
            app:layout_marginTopPercent="@string/common_marginTopPercent"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_paddingRightPercent="@string/common_paddingRightPercent"
            android:background="@drawable/selector_bth_white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="4.5%w"
                android:text="@string/about_update"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/about_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/about_update_arrow"
                app:layout_marginRightPercent="2%w"
                app:layout_textSizePercent="4.5%w"
                android:text=""
                android:textColor="@color/text_normal_color" />

            <ImageView
                android:id="@+id/about_update_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_right" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="@string/common_line_marginLeftPercent"
                android:background="@color/windows_color" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!-- 凯立德手机导航服务协议 -->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/about_downloadlink_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/about_heightPercent"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_paddingRightPercent="@string/common_paddingRightPercent"
            android:background="@drawable/selector_bth_white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="4.5%w"
                android:text="扫码下载"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/about_agreement_arrow"
                app:layout_marginRightPercent="2%w"
                app:layout_textSizePercent="4.5%w"
                android:text=""
                android:textColor="@color/text_normal_color" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="@string/common_line_marginLeftPercent"
                android:background="@color/windows_color" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!-- 凯立德手机导航服务协议 -->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/about_agreement_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/about_heightPercent"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_paddingRightPercent="@string/common_paddingRightPercent"
            android:background="@drawable/selector_bth_white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="4.5%w"
                android:text="@string/about_agreement"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/about_agreement_arrow"
                app:layout_marginRightPercent="2%w"
                app:layout_textSizePercent="4.5%w"
                android:text=""
                android:textColor="@color/text_normal_color" />

            <ImageView
                android:id="@+id/about_agreement_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_right" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!-- 官方网站 -->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/about_web_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/about_heightPercent"
            app:layout_marginTopPercent="@string/common_marginTopPercent"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_paddingRightPercent="@string/common_paddingRightPercent"
            android:background="@drawable/selector_bth_white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
               app:layout_textSizePercent="4.5%w"
                android:text="@string/about_web"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="4.5%w"
                android:text="@string/about_web_content"
                android:textColor="@color/text_normal_color" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="@string/common_line_marginLeftPercent"
                android:background="@color/windows_color" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <!-- 官方网站 -->

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/about_customer_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/about_heightPercent"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_paddingRightPercent="@string/common_paddingRightPercent"
            android:background="@drawable/selector_bth_white_bg" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="4.5%w"
                android:text="@string/about_customer"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:layout_textSizePercent="4.5%w"
                android:text="@string/about_customer_phone"
                android:textColor="@color/text_normal_color" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>