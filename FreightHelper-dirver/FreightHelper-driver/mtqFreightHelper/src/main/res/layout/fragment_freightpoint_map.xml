<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/id_freightpoint_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/freightpoint_bottom" >
    </FrameLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/freightpoint_default_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="18.5%sh"
        android:background="@color/white"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无数据"
            android:textColor="@color/black3"
            android:textSize="20sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/freightpoint_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="18.5%sh"
        android:background="@color/white"
        android:visibility="visible" >




                <android.support.v4.view.ViewPager
                    android:id="@+id/id_freightpoint_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />


<!--
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_freightpoint_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
-->





        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/idc_indicator"
            android:layout_alignParentTop="true"
            app:layout_marginTopPercent="1.5%w"
            app:layout_heightPercent="3%w"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:background="@null" >
        </com.viewpagerindicator.CirclePageIndicator >



        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/pll_indicator"
            android:layout_alignParentTop="true"
            app:layout_marginTopPercent="1.5%w"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <View
                android:id="@+id/v_1"
                android:layout_width="6dp"
                android:layout_height="6dp"


                android:background="@drawable/circle_gray"
                app:layout_marginPercent="0%sw"
                />


            <View
                android:layout_width="3dp"
                android:layout_height="3dp"

                />


            <View
                android:id="@+id/v_2"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"

                android:background="@drawable/circle_gray"
                app:layout_marginPercent="0%sw"
                />

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"

                />
            <View
                android:id="@+id/v_3"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_appcolor"
                app:layout_marginPercent="0%sw"
                />

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"

                />
            <View
                android:id="@+id/v_4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_gray"
                app:layout_marginPercent="0%sw"
                />

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"

                />
            <View
                android:id="@+id/v_5"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_margin="3dp"
                android:background="@drawable/circle_gray"
                app:layout_marginPercent="0%sw"
                />



        </com.zhy.android.percent.support.PercentLinearLayout >
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>