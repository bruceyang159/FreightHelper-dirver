<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/layout_title_height"
            layout="@layout/layout_title" />
    
     <com.zhy.android.percent.support.PercentLinearLayout 
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
		 android:layout_height="0dp"
	        app:layout_heightPercent="8.2%sh"
	        android:background="@color/white">
	        
	        <com.zhy.android.percent.support.PercentRelativeLayout
	            android:id="@+id/rl_history_travel_choice_date"
	            android:layout_height="match_parent"
	            android:layout_width="0dp"
	            android:layout_weight="1">
	            <TextView 
	                android:id="@+id/id_map_mode_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="选择日期"
	                android:textColor="@drawable/freight_point_mode_color"
	                android:layout_centerInParent="true"
	                app:layout_textSizePercent ="2.5%sh"
	             />
	            <ImageView android:id="@+id/id_map_mode_line"
	                android:layout_alignParentBottom="true"
	                android:layout_centerInParent="true"
	                android:layout_width="0dp"
	                android:layout_height="0dp"
	                app:layout_widthPercent = "20%sw"
	                app:layout_heightPercent = "1%sw"
	                android:src="@drawable/selector_histroy_travel_line_color"/>
	            
	        </com.zhy.android.percent.support.PercentRelativeLayout>
	        
	        <com.zhy.android.percent.support.PercentRelativeLayout
	            android:id="@+id/rl_history_travel_choice_travel"
	            android:layout_height="match_parent"
	            android:layout_width="0dp"
	            android:layout_weight="1">
	            <TextView 
	                android:id="@+id/id_list_mode_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                app:layout_textSizePercent ="2.5%sh"
	                android:text="选择行程"
	                android:textColor="@drawable/freight_point_mode_color"
	                android:layout_centerInParent="true"
	             />
	            
	            <ImageView android:id="@+id/id_list_mode_line"
	                android:layout_alignParentBottom="true"
	                android:layout_centerInParent="true"
	                android:layout_width="0dp"
	                android:layout_height="0dp"
	                app:layout_widthPercent = "20%sw"
	                app:layout_heightPercent = "1%sw"
	                android:src="@drawable/selector_histroy_travel_line_color"/>
	            
	        </com.zhy.android.percent.support.PercentRelativeLayout>
	        
	    </com.zhy.android.percent.support.PercentLinearLayout>
	    
     <FrameLayout
         android:id="@+id/fl_histroy_travel_fragment"
         android:layout_width="match_parent" 
         android:layout_height="match_parent"
         android:background="@color/scanrecord_list_title_bg"     
     ></FrameLayout>
    

</com.zhy.android.percent.support.PercentLinearLayout>
