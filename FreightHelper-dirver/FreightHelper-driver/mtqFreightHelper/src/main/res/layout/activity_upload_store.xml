<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="9%sh"
        android:background="@color/white"
        android:clipToPadding="true" >

        <ImageView
            android:id="@+id/iv_titleleft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_arrow_back_gray"
            app:layout_heightPercent="100%h"
            app:layout_paddingTopPercent="30%h"
            app:layout_paddingBottomPercent="30%h"
            app:layout_paddingLeftPercent="35%h"
            app:layout_paddingRightPercent="40%h"
            app:layout_widthPercent="100%h"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_textSizePercent="35%h"
            android:gravity="center"
            android:singleLine="true"
            android:text="门店标注"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_rightright"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="100%h"
            app:layout_paddingLeftPercent="5%w"
            app:layout_paddingRightPercent="5%w"
            app:layout_textSizePercent="4.5%w"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/black1"
            android:visibility="visible" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_color"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/windows_color" >

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    app:layout_heightPercent="14%w"
                    app:layout_marginTopPercent="3%w"
                    app:layout_paddingBottomPercent="0%w"
                    app:layout_paddingLeftPercent="5%w"
                    app:layout_paddingRightPercent="5%w"
                    app:layout_paddingTopPercent="0%w"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_status"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text="企业"
                        android:textColor="@color/text_normal_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_status"
                        app:layout_paddingBottomPercent="0%w"
                        app:layout_paddingLeftPercent="0%w"
                        app:layout_paddingRightPercent="0%w"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/black_text" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="5%w"
                        android:background="@color/tasklist_stroke" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    app:layout_heightPercent="14%w"
                    app:layout_paddingBottomPercent="0%w"
                    app:layout_paddingLeftPercent="5%w"
                    app:layout_paddingRightPercent="5%w"
                    app:layout_paddingTopPercent="0%w"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text="编码"
                        android:textColor="@color/text_normal_color" />

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv21"
                        app:layout_marginLeftPercent="5%w" >

                        <TextView
                            android:id="@+id/tv_storecodeinputhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:text="选填"
                            android:textColor="@color/text_hint"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_storecode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_paddingBottomPercent="0%w"
                            app:layout_paddingLeftPercent="0%w"
                            app:layout_paddingRightPercent="0%w"

                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLIMNOPQRSTUVWXYZ"
                            android:gravity="right|center_vertical"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:maxLength="20"
                            android:nextFocusForward="@+id/et_store"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black_text"
                            android:textColorHint="@color/text_hint"
                            android:textCursorDrawable="@drawable/color_cursor" />
                    </com.zhy.android.percent.support.PercentFrameLayout>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="5%w"
                        android:background="@color/tasklist_stroke" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    app:layout_heightPercent="14%w"
                    app:layout_paddingBottomPercent="0%w"
                    app:layout_paddingLeftPercent="0%w"
                    app:layout_paddingRightPercent="5%w"
                    app:layout_paddingTopPercent="0%w"
                    android:background="@color/white" >

                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                       app:layout_paddingLeftPercent="5%w"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text="店名"
                        android:textColor="@color/text_normal_color" />

                    <TextView
                        android:id="@+id/tv_readmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:layout_textSizePercent="4.5%sw"
                        app:layout_widthPercent="5%sw"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red" />

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv11"
                        app:layout_marginLeftPercent="5%w" >

                        <TextView
                            android:id="@+id/tv_storeinputhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:text="必填"
                            android:textColor="@color/text_hint"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_store"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_paddingBottomPercent="0%w"
                            app:layout_paddingLeftPercent="0%w"
                            app:layout_paddingRightPercent="0%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:maxLength="10"
                            android:nextFocusForward="@+id/tv_position"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black_text"
                            android:textColorHint="@color/text_hint"
                            android:textCursorDrawable="@drawable/color_cursor" />
                    </com.zhy.android.percent.support.PercentFrameLayout>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="5%w"
                        android:background="@color/tasklist_stroke" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_paddingRightPercent="5%w"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_mark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:layout_textSizePercent="4.5%sw"
                        app:layout_widthPercent="5%sw"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical|right"
                        android:text="*"
                        android:textColor="@color/red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_status"
                        app:layout_heightPercent="14%w"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text="地址"
                        android:textColor="@color/text_normal_color" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:layout_paddingBottomPercent="3%w"
                        app:layout_paddingTopPercent="3%w"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_pcd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:layout_paddingBottomPercent="2%w"
                            app:layout_paddingLeftPercent="5%w"
                            app:layout_paddingRightPercent="3%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:singleLine="false"
                            android:text=""
                            android:textColor="@color/text_hint"
                            android:visibility="gone" />

                        <EditText
                            android:id="@+id/tv_position"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            app:layout_paddingLeftPercent="5%w"
                            app:layout_paddingRightPercent="3%w"
                            app:layout_paddingTopPercent="0%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:enabled="false"
                            android:gravity="right|center_vertical"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:imeOptions="actionNext"
                            android:maxLength="50"
                            android:nextFocusForward="@+id/et_name"
                            android:text=""
                            android:textColor="@color/black_text" />
                    </com.zhy.android.percent.support.PercentLinearLayout>

                    <ImageView
                        android:id="@+id/iv_selectposition"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_status"
                        app:layout_heightPercent="14%w"
                        app:layout_paddingBottomPercent="4.5%w"
                        app:layout_paddingLeftPercent="3%w"
                        app:layout_paddingRightPercent="0%w"
                        app:layout_paddingTopPercent="4.5%w"
                        app:layout_widthPercent="7.5%w"
                        android:gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_mapselect_point" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/ll_kcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="5%w"
                        android:background="@color/tasklist_stroke" />

                    <com.zhy.android.percent.support.PercentLinearLayout
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        app:layout_heightPercent="14%w"
                        app:layout_paddingBottomPercent="0%w"
                        app:layout_paddingLeftPercent="5%w"
                        app:layout_paddingRightPercent="5%w"
                        app:layout_paddingTopPercent="0%w"
                        android:background="@color/white"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/tv_status"
                            app:layout_textSizePercent="4.5%sw"
                            android:gravity="center_vertical"
                            android:text="K 码"
                            android:textColor="@color/text_normal_color" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_kcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/tv_status"
                            app:layout_paddingBottomPercent="0%w"
                            app:layout_paddingLeftPercent="0%w"
                            app:layout_paddingRightPercent="0%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/black_text" />
                    </com.zhy.android.percent.support.PercentLinearLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="5%w"
                        android:background="@color/tasklist_stroke" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    app:layout_heightPercent="14%w"
                    app:layout_marginTopPercent="0%w"
                    app:layout_paddingBottomPercent="0%w"
                    app:layout_paddingLeftPercent="5%w"
                    app:layout_paddingRightPercent="5%w"
                    app:layout_paddingTopPercent="0%w"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text="联系人"
                        android:textColor="@color/text_normal_color" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv13"
                        app:layout_marginLeftPercent="5%w" >

                        <TextView
                            android:id="@+id/tv_nameinputhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:text="选填"
                            android:textColor="@color/text_hint"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_paddingBottomPercent="0%w"
                            app:layout_paddingLeftPercent="0%w"
                            app:layout_paddingRightPercent="0%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:maxLength="10"
                            android:nextFocusForward="@+id/et_phone"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/black_text"
                            android:textColorHint="@color/text_hint"
                            android:textCursorDrawable="@drawable/color_cursor" />
                    </com.zhy.android.percent.support.PercentFrameLayout>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="5%w"
                        android:background="@color/tasklist_stroke" />
                </com.zhy.android.percent.support.PercentLinearLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentLeft="true"
                    app:layout_heightPercent="14%w"
                    app:layout_paddingBottomPercent="0%w"
                    app:layout_paddingLeftPercent="5%w"
                    app:layout_paddingRightPercent="5%w"
                    app:layout_paddingTopPercent="0%w"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/tv_status"
                        app:layout_textSizePercent="4.5%sw"
                        android:gravity="center_vertical"
                        android:text="电话"
                        android:textColor="@color/text_normal_color" />

                    <com.zhy.android.percent.support.PercentFrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv14"
                        app:layout_marginLeftPercent="5%w" >

                        <TextView
                            android:id="@+id/tv_phoneinputhint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="座机/手机号码,选填,多号码用英文&quot;,&quot;逗号分隔,最多输入3个号码"
                            android:textColor="@color/text_hint"
                            android:visibility="visible" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right|center_vertical"
                            app:layout_paddingBottomPercent="0%w"
                            app:layout_paddingLeftPercent="0%w"
                            app:layout_paddingRightPercent="0%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:digits="0123456789-,"
                            android:gravity="right|center_vertical"
                            android:hint=""
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:nextFocusForward="@+id/et_remark"
                            android:singleLine="false"
                            android:text=""
                            android:textColor="@color/black_text"
                            android:textColorHint="@color/text_hint"
                            android:textCursorDrawable="@drawable/color_cursor" />
                    </com.zhy.android.percent.support.PercentFrameLayout>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <TextView
                    android:id="@+id/tv_pichint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:layout_marginBottomPercent="2%w"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginRightPercent="7%w"
                    app:layout_marginTopPercent="2%w"
                    app:layout_textSizePercent="@string/textsize_little_title"
                    android:text="添加照片"
                    android:textColor="@color/tasklist_text_color" />

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_paddingPercent="5%w"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <com.yunbaba.freighthelper.ui.customview.NoScrollGridView
                        android:id="@+id/gv_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:horizontalSpacing="5dp"
                        android:numColumns="4"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="5dp" />

                    <TextView
                        android:id="@+id/tv_picnumhint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="25%w"
                        app:layout_textSizePercent="4%sw"
                        android:text="拍张参考照片,我们会优先处理哦~"
                        android:textColor="@color/text_hint"
                        android:visibility="visible" />
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:id="@+id/pll_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_paddingBottomPercent="10%w"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:layout_marginBottomPercent="2%w"
                        app:layout_marginLeftPercent="5%w"
                        app:layout_marginRightPercent="7%w"
                        app:layout_marginTopPercent="2%w"
                        app:layout_textSizePercent="@string/textsize_little_title"
                        android:text="备注信息"
                        android:textColor="@color/tasklist_text_color" />

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_minHeightPercent="45%w"
                        app:layout_paddingPercent="5%w"
                        android:background="@color/white"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/tv_status"
                            app:layout_marginBottomPercent="5%w"
                            app:layout_minHeightPercent="30%w"
                            app:layout_textSizePercent="4.5%sw"
                            android:background="@null"
                            android:gravity="top|left"
                            android:hint="其他信息请补充说明"
                            android:imeOptions="actionDone"
                            android:maxLength="300"
                            android:text=""
                            android:textColor="@color/text_normal_color"
                            android:textColorHint="@color/text_hint" />

                        <TextView
                            android:id="@+id/tv_wordcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            app:layout_textSizePercent="4%w"
                            android:text="0/300"
                            android:textColor="@color/text_normal_color" />
                    </com.zhy.android.percent.support.PercentRelativeLayout>
                </com.zhy.android.percent.support.PercentLinearLayout>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </ScrollView>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/pb_waiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:visibility="gone" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:clickable="true"
                android:indeterminateTint="@color/app_color2"
                android:indeterminate="false" />
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </RelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>