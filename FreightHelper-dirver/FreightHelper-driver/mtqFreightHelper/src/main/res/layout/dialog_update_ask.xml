<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:layout_heightPercent="33%sh"
        app:layout_widthPercent="85%sw"
        android:background="@drawable/shape_prompt_dialog_bg" >

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="60%"
            app:layout_paddingLeftPercent="5%"
            app:layout_paddingRightPercent="5%"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_exit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="5.5%sw"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="退出账号"
                android:textColor="@color/black"
                android:visibility="visible" />

            <TextView
                android:id="@+id/dialog_exit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="4.8%sw"
                app:layout_marginTopPercent="8%h"
                android:ellipsize="end"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:singleLine="false"
                android:text="确定要退出当前账号?"
                android:textColor="@color/text_normal_color"
                android:visibility="visible" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="40%h"
            android:layout_alignParentBottom="true"
            app:layout_paddingPercent="3%sw"
            android:gravity="center"
            android:orientation="horizontal" >


        <Button
            android:id="@+id/dialog_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:layout_weight="1"
            app:layout_textSizePercent="5.5%sw"
            app:layout_marginPercent="1%sw"
            android:background="@drawable/selector_bth_gray_bg"
            android:gravity="center"
            android:text="@string/dialog_cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialog_exit_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_textSizePercent="5.5%sw"
            app:layout_marginPercent="1%sw"
            android:background="@drawable/selector_btn_emerald_red_bg"
            android:gravity="center"
            android:text="@string/dialog_sure"
            android:textColor="@color/white" />


        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>