<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/windows_color"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="@string/layout_title_height"
            layout="@layout/layout_title" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            app:layout_heightPercent="60%w"
            app:layout_paddingBottomPercent="14%w"
            app:layout_paddingLeftPercent="35.5%w"
            app:layout_paddingRightPercent="35.5%w"
            app:layout_paddingTopPercent="19%w"
            app:layout_widthPercent="100%w"
            android:scaleType="fitXY"
            android:src="@drawable/bg_sm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_textSizePercent="5%w"
            android:gravity="center"
            android:singleLine="true"
            android:text="当前扫码内容不在业务范围内"
            android:textColor="@color/text_normal_color"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:layout_marginTopPercent="1%w"
            app:layout_textSizePercent="4%w"
            android:gravity="center"
            android:singleLine="true"
            android:text="请更换二维码重新扫描"
            android:textColor="@color/text_normal_color"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            app:layout_heightPercent="15%w"
            app:layout_marginTopPercent="6%w"
            app:layout_textSizePercent="5%w"
            app:layout_widthPercent="80%w"
            android:gravity="center"
            android:singleLine="true"
            android:text="点击重新扫码"
            android:textColor="@color/app_color"
            android:visibility="visible" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>