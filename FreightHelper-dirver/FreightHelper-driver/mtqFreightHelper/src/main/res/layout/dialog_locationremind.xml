<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="90%"
        android:background="@drawable/shape_prompt_dialog_bg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="70%"
            app:layout_paddingLeftPercent="5%"
            app:layout_paddingRightPercent="5%"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_exit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="7%w"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="定位服务未开启"

                android:textColor="@color/text_normal_color"
                android:visibility="visible" />

            <TextView
                android:id="@+id/dialog_exit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="6%h"
                app:layout_textSizePercent="6%w"
                android:ellipsize="end"
                android:gravity="center"

                android:maxLines="2"
                android:text="请在设置中开启 &quot; 定位&quot;服务"
                android:textColor="@color/black"
                android:visibility="visible" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/dialog_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="30%"
            app:layout_textSizePercent="6.5%w"
            app:layout_widthPercent="50%"
            android:background="@drawable/round_background_bottomleft"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/black" />



        <TextView
            android:id="@+id/dialog_exit_sure"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="30%"
            app:layout_textSizePercent="6.5%w"
            app:layout_widthPercent="50%"
            android:background="@drawable/round_background_bottomright"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/app_color" />


        <!--<View-->
            <!--android:layout_width="1px"-->
            <!--android:layout_height="0dp"-->
            <!--app:layout_heightPercent="25%"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:background="@color/gray"-->
            <!--android:layout_alignTop="@+id/dialog_exit_sure"-->
            <!--/>-->
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>