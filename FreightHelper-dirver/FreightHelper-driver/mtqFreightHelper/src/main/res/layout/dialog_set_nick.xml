<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="90%"
        android:background="@drawable/shape_prompt_dialog_bg" >

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="67.5%"
            app:layout_paddingLeftPercent="5%"
            app:layout_paddingRightPercent="5%"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dialog_set_nick_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="7%w"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/dialog_nick_title"
                android:textColor="@color/black"
                android:visibility="visible" />

            <EditText
                android:id="@+id/dialog_set_nick_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="40%h"
                app:layout_textSizePercent="6%w"
                app:layout_marginTopPercent="8%h"
                android:hint="@string/dialog_nick_hint"
                android:background="@drawable/shape_set_nick"
                app:layout_paddingLeftPercent="2%w"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                android:text=""
                android:textColorHint="@color/text_normal_color"
                android:textColor="@color/black"
                android:visibility="visible" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <Button
            android:id="@+id/dialog_set_nick_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            app:layout_heightPercent="22.5%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginLeftPercent="5%"
            app:layout_textSizePercent="7%w"
            app:layout_widthPercent="43.5%"
            android:background="@drawable/selector_bth_gray_bg"
            android:gravity="center"
            android:text="@string/dialog_cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialog_set_nick_sure"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="22.5%"
            app:layout_marginBottomPercent="10%"
            app:layout_marginRightPercent="5%"
            app:layout_textSizePercent="7%w"
            app:layout_widthPercent="43.5%"
            android:background="@drawable/selector_bth_red_bg"
            android:gravity="center"
            android:text="@string/dialog_sure"
            android:textColor="@drawable/selector_bth_red_text" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>