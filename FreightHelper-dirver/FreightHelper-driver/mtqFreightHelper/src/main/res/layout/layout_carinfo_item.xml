<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windows_color"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/carinfo_num"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_marginLeftPercent="6%w"
        app:layout_textSizePercent="4.5%w"
        android:gravity="center_vertical"
        android:text="@string/carinfo_num"
        android:textColor="@color/text_normal_color"
        android:visibility="gone" />

    <!-- 车牌号码 -->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/carinfo_plate_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="@string/carinfo_heightPercent"
        app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
        app:layout_paddingRightPercent="@string/common_paddingRightPercent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/carinfo_plate_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="5%w"
            android:text="@string/carinfo_plate"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/carinfo_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/carinfo_plate_pre"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_textSizePercent="5%w"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_normal_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="@string/common_line_marginLeftPercent"
            android:background="@color/windows_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <!-- 货车类型 -->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/carinfo_type_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="@string/carinfo_heightPercent"
        app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
        app:layout_paddingRightPercent="@string/common_paddingRightPercent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/carinfo_type_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="5%w"
            android:text="@string/carinfo_type"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/carinfo_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/carinfo_type_pre"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_textSizePercent="5%w"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_normal_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="@string/common_line_marginLeftPercent"
            android:background="@color/windows_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <!-- 车辆品牌 -->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/carinfo_brand_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="@string/carinfo_heightPercent"
        app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
        app:layout_paddingRightPercent="@string/common_paddingRightPercent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/carinfo_brand_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="5%w"
            android:text="@string/carinfo_brand"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/carinfo_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/carinfo_brand_pre"
