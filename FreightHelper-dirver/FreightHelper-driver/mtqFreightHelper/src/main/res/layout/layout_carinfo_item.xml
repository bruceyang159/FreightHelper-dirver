            app:layout_textSizePercent="5%w"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_normal_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="@string/common_line_marginLeftPercent"
            android:background="@color/windows_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <!-- 车辆型号 -->

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/carinfo_model_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="@string/carinfo_heightPercent"
        app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
        app:layout_paddingRightPercent="@string/common_paddingRightPercent"
        android:background="@color/white" >

        <TextView
            android:id="@+id/carinfo_model_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="5%w"
            android:text="@string/carinfo_model"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/carinfo_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/carinfo_model_pre"
            app:layout_paddingLeftPercent="@string/common_paddingLeftPercent"
            app:layout_textSizePercent="5%w"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_normal_color" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
