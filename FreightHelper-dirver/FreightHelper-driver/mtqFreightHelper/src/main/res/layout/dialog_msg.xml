<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_prompt_dialog_bg"
        app:layout_heightPercent="30%"
        app:layout_widthPercent="90%">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_heightPercent="70%"
            app:layout_paddingLeftPercent="5%"
            app:layout_paddingRightPercent="5%">

            <TextView
                android:id="@+id/dialog_exit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="加入企业车队时要先退出其他企业车队， 确认要加入企业车队？"
                android:textColor="@color/black"
                android:visibility="visible"
                app:layout_textSizePercent="6.4%w" />

            <TextView
                android:id="@+id/dialog_exit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="姚的物流只允许您同时加入一个企业车队"

                android:textColor="@color/text_normal_color"
                android:visibility="visible"
                app:layout_marginTopPercent="6%h"
                app:layout_textSizePercent="6%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <Button
            android:id="@+id/dialog_exit_cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/selector_bth_red_bg"
            android:gravity="center"
            android:text="@string/dialog_cancel"
            android:textColor="@drawable/selector_bth_red_text"
            app:layout_heightPercent="22%"
            app:layout_marginBottomPercent="8%"
            app:layout_marginLeftPercent="5%"
            app:layout_textSizePercent="7%w"
            app:layout_widthPercent="43.5%" />

        <Button
            android:id="@+id/dialog_exit_sure"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bth_red_bg"
            android:gravity="center"
            android:text="@string/dialog_sure"
            android:textColor="@drawable/selector_bth_red_text"
            app:layout_heightPercent="22%"
            app:layout_marginBottomPercent="8%"
            app:layout_marginRightPercent="5%"
            app:layout_textSizePercent="7%w"
            app:layout_widthPercent="43.5%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>