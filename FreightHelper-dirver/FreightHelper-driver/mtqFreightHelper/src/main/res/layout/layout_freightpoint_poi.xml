<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >
   <ImageView android:id = "@+id/freight_point_poi_img"
       android:layout_centerInParent="true"
       android:src="@drawable/ic_water_unselect" 
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_heightPercent="5.78%sh"
       app:layout_widthPercent="6.2%sw"
       android:scaleType="centerInside"
    />
   <TextView 
       android:id = "@+id/freight_point_poi_number"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal ="true"
       app:layout_marginTopPercent = "1.5%sw"
       app:layout_textSizePercent = "3.3%sw"
       android:textColor="@color/white"
    />

</com.zhy.android.percent.support.PercentRelativeLayout>
