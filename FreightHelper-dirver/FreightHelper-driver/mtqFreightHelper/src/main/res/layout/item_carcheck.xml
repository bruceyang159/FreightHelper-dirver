<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windows_color"
    android:gravity="center_vertical" >

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_letter"
        android:layout_gravity="center_vertical"
        app:layout_paddingBottomPercent="5%w"
        app:layout_paddingLeftPercent="4%w"
        app:layout_paddingRightPercent="5%w"
        app:layout_paddingTopPercent="4%w"
        android:background="@drawable/selector_normal_listitem"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_part"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="10%w"
            android:gravity="center"
            android:text=""
            app:layout_paddingPercent="1%w"
            android:src="@drawable/ic_engine_speed" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/tv_state"
            android:layout_toRightOf="@+id/iv_part"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_paddingLeftPercent="4%w"
                app:layout_paddingRightPercent="4%w"
                app:layout_textSizePercent="4.5%sw"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="发动机系统"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_paddingLeftPercent="4%w"
                app:layout_paddingRightPercent="4%w"
                app:layout_paddingTopPercent="1%w"
                app:layout_textSizePercent="4%sw"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_textSizePercent="4%w"
            android:gravity="center_vertical"
            android:text="正常"
            android:textColor="@color/app_color"
            android:visibility="visible" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        app:layout_paddingLeftPercent="15%w"
        android:background="@color/tasklist_stroke"
        android:visibility="visible" />

</com.zhy.android.percent.support.PercentRelativeLayout>