<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
     <!-- Application theme. -->
    <style name="GuideAppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
          <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <!-- 启动页面主题 -->
    <style name="WelcomeTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/welcome</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FreightPointBtn">
        <item name="android:layout_marginTop"> 10dp </item>
        <item name="android:layout_marginRight"> 10dp</item>
    </style>

  

    <style name="dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- dialog无标题 -->
        <item name="android:background">@color/transparent</item>
        <!-- dialog去掉边框 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- dialog背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- dialog弹出后当前的 activity背景变暗 -->
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="SelectPopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <!-- 下划线style -->
    <style name="line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/windows_color</item>
    </style>

    <!-- 消息标题style -->
    <style name="msg_switch_type_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_normal_color</item>
    </style>

    <style name="msg_switch_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 消息标题style -->
    <style name="msg_switch_headline_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 消息开关style -->
    <style name="msg_switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:switchMinWidth">60dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textOff"></item>
        <item name="android:checked">true</item>
        <item name="android:button">@drawable/selector_msg_switch_bg</item>
    </style>

    <style name="msg_filter_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_msg_filter_color</item>
        <item name="android:background">@drawable/selector_msg_filter_bg</item>
    </style>

    <style name="ScanRecordListStyle">
        <item name="layout_paddingLeftPercent"> 3.5%sw </item>
        <item name="layout_paddingRightPercent"> 3.5%sw </item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->


        <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_square_style</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">#222222</item>
        <item name="android:background">#00ffffff</item>
    </style>
    
    <style name = "travel_detail_pop">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_centerVertical">true</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "layout_textSizePercent">3.5%sw</item>  
    </style>
    
    <style name = "travel_detail_pop_left" parent="travel_detail_pop">
         <item name = "android:layout_alignParentLeft">true</item>  
    </style>
    <style name = "travel_detail_pop_right" parent="travel_detail_pop">
         <item name = "android:layout_alignParentRight">true</item>  
    </style>

    <style name = "drive_evaluation_bottom_text">
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
        <item name = "android:layout_centerHorizontal">true</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "layout_textSizePercent">3.5%sw</item>  
    </style>
    
    <style name = "drive_evaluation_part2_text"  parent="drive_evaluation_bottom_text">
        <item name = "layout_marginBottomPercent"> 3.5%sh </item>
        <item name = "android:layout_alignParentBottom">true</item>
    </style>
    
</resources>